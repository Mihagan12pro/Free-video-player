<Window x:Class="Free_video_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Free_video_player"
        mc:Ignorable="d"
        Title="Free video player" Height="450" Width="800" MinHeight="350" MinWidth="600">
    <Viewbox>
        <Grid>

            <Button Name="SkipBackwardBtn" Content="◄◄" Height="30" Width="30" Margin="320,352,432,20" Background="Gray" Click="SkipBackwardBtn_Click"></Button>
            <Button Name="PauseAndPlayBtn" Content="▶" FontWeight="Heavy" Background="Gray" Height="30" Width="30" Margin="380,353,372,19" Click="PauseAndPlayBtn_Click" ></Button>
            <Button Name="SkipForwardBtn" Content="►►" Width="30" Height="30" Background="Gray" Margin="450,353,302,19"></Button>
            <Slider Name="VolumeControlSlr"  Margin="487,355,230,28" ValueChanged="VolumeControlSlr_ValueChanged" ></Slider>
            <Slider Foreground="AliceBlue" Name="VideoSkipperSlr"   Margin="158,316,156,56" ValueChanged="VideoSkipperSlr_ValueChanged" ></Slider>
            <MediaElement Name="VideoPlayerMedia"  HorizontalAlignment="Left" Height="260" Margin="166,25,0,0" VerticalAlignment="Top" Width="459"/>
            <ListBox Name="PlayListLb"  Margin="658,101,12,178" BorderThickness="1" BorderBrush="Gray"/>
            <Label Content="   Videos list"  BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Left" Margin="676,71,0,0" VerticalAlignment="Top" Width="76" Height="30"/>
            <Button Name="AddToPlayList" Content="Add" HorizontalAlignment="Left" Margin="658,226,0,0" VerticalAlignment="Top" Width="51" Click="AddToPlayList_Click"/>
            <Button x:Name="RemoveFromPlayList" Content="Remove" HorizontalAlignment="Left" Margin="719,226,0,0" VerticalAlignment="Top" Width="51"/>
        </Grid>
    </Viewbox>

</Window>
